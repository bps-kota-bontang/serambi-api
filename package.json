  "main": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bps-kota-bontang/serambi-api.git"
  },
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "generate": "prisma generate",
    "seed": "NODE_ENV=development bunx dotenv -e .env.development -- bun prisma/seed.ts",
    "seed:staging": "NODE_ENV=staging bunx dotenv -e .env.staging -- bun prisma/seed.ts",
    "seed:production": "NODE_ENV=production bunx dotenv -e .env.production -- bun prisma/seed.ts",
    "migrate": "dotenv -e .env.development -- bunx prisma migrate dev",
    "migrate:staging": "dotenv -e .env.staging -- bunx prisma migrate dev",
    "migrate:production": "dotenv -e .env.production -- bunx prisma migrate dev"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "@prisma/client": "^5.19.1",
    "hono": "^4.6.2",
    "papaparse": "^5.4.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/papaparse": "^5.3.14",
    "prisma": "^5.19.1"
  }
}
